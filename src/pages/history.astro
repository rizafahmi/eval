---
import Layout from '../layouts/Layout.astro';
import Card from '../components/ui/Card.astro';
import Breadcrumbs from '../components/ui/Breadcrumbs.astro';
import Badge from '../components/ui/Badge.astro';
import Button from '../components/ui/Button.astro';
import EmptyState from '../components/ui/EmptyState.astro';
import { getEvaluations, getResults, getTemplateById } from '../lib/db';

// Get query params
const url = Astro.url;
const templateId = url.searchParams.get('template');

// Get evaluations
let evaluations: Array<{
  id: string;
  instruction_text: string;
  accuracy_rubric: string;
  status: string;
  created_at: string;
  completed_at?: string;
  template_name?: string;
  best_accuracy?: number;
  fastest_model?: { model_name: string; execution_time_ms: number };
  result_count: number;
}> = [];

let templateName = '';

try {
  const rawEvaluations = getEvaluations(templateId || undefined, 50, 0);

  if (templateId) {
    const template = getTemplateById(templateId);
    if (template) {
      templateName = template.name;
    }
  }

  evaluations = rawEvaluations.map(e => {
    const results = getResults(e.id);
    const completedResults = results.filter(r => r.status === 'completed');

    let bestAccuracy: number | undefined;
    let fastestModel: { model_name: string; execution_time_ms: number } | undefined;

    if (completedResults.length > 0) {
      const best = completedResults.reduce((a, b) =>
        (a.accuracy_score || 0) > (b.accuracy_score || 0) ? a : b
      );
      bestAccuracy = best.accuracy_score;

      const fastest = completedResults.reduce((a, b) =>
        (a.execution_time_ms || Infinity) < (b.execution_time_ms || Infinity) ? a : b
      );
      if (fastest.execution_time_ms !== undefined) {
        fastestModel = {
          model_name: fastest.model_name,
          execution_time_ms: fastest.execution_time_ms
        };
      }
    }

    return {
      id: e.id,
      instruction_text: e.instruction_text.substring(0, 100),
      accuracy_rubric: e.accuracy_rubric,
      status: e.status,
      created_at: e.created_at,
      completed_at: e.completed_at,
      best_accuracy: bestAccuracy,
      fastest_model: fastestModel,
      result_count: results.length
    };
  });
} catch {
  // Database may not be initialized
}

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  ...(templateId ? [{ label: 'Templates', href: '/templates' }] : []),
  { label: templateName || 'History' }
];

// Icon for empty state
const clockIcon = `<svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-base-content/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
</svg>`;

// Helper function to get status variant
function getStatusVariant(status: string): 'warning' | 'info' | 'success' | 'error' | 'neutral' {
  switch (status) {
    case 'pending': return 'warning';
    case 'running': return 'info';
    case 'completed': return 'success';
    case 'failed': return 'error';
    default: return 'neutral';
  }
}
---

<Layout title={templateName ? `History: ${templateName} - Eval AI` : 'Evaluation History - Eval AI'}>
  <Breadcrumbs items={breadcrumbItems} />

  <div class="mb-8">
    <h1 class="text-3xl font-bold">
      {templateName ? `History: ${templateName}` : 'Evaluation History'}
    </h1>
    <p class="mt-2 text-base-content/70">
      {templateId
        ? 'Historical evaluations for this template.'
        : 'All past evaluation runs and their results.'
      }
    </p>
  </div>

  <!-- Filters -->
  {!templateId && (
    <div class="mb-6 flex gap-4">
      <Button href="/history" variant="secondary" size="sm">All Evaluations</Button>
    </div>
  )}

  <!-- History List -->
  <Card>
    {evaluations.length > 0 ? (
      <div class="overflow-x-auto">
        <table class="table table-zebra">
          <thead>
            <tr>
              <th>Instruction</th>
              <th>Rubric</th>
              <th>Models</th>
              <th>Best Accuracy</th>
              <th>Fastest Model</th>
              <th>Status</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {evaluations.map(evaluation => (
              <tr>
                <td class="max-w-xs">
                  <div class="truncate text-sm" title={evaluation.instruction_text}>
                    {evaluation.instruction_text}
                  </div>
                </td>
                <td>
                  <Badge variant="ghost" size="sm">
                    {evaluation.accuracy_rubric.replace('_', ' ')}
                  </Badge>
                </td>
                <td>{evaluation.result_count}</td>
                <td>
                  {evaluation.best_accuracy !== undefined ? (
                    <span class="font-semibold text-success">{evaluation.best_accuracy}%</span>
                  ) : '-'}
                </td>
                <td>
                  {evaluation.fastest_model ? (
                    <div class="text-sm">
                      <div class="font-medium">{evaluation.fastest_model.model_name}</div>
                      <div class="text-base-content/50">{evaluation.fastest_model.execution_time_ms}ms</div>
                    </div>
                  ) : '-'}
                </td>
                <td>
                  <Badge variant={getStatusVariant(evaluation.status)}>
                    {evaluation.status}
                  </Badge>
                </td>
                <td class="text-sm text-base-content/70">
                  {new Date(evaluation.created_at).toLocaleString()}
                </td>
                <td>
                  <a
                    href={`/?evaluation=${evaluation.id}`}
                    class="btn btn-xs btn-ghost text-primary"
                  >
                    View
                  </a>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    ) : (
      <EmptyState
        title="No evaluation history"
        description="Run some evaluations to see them here."
        icon={clockIcon}
        action={{ label: 'Go to Evaluate', href: '/' }}
      />
    )}
  </Card>
</Layout>
