---
interface Props {
  id: string;
  title: string;
  message: string;
  confirmLabel?: string;
  cancelLabel?: string;
  confirmVariant?: 'primary' | 'error' | 'warning';
}

const { 
  id, 
  title, 
  message, 
  confirmLabel = 'Confirm', 
  cancelLabel = 'Cancel',
  confirmVariant = 'primary' 
} = Astro.props;
---

<dialog id={id} class="modal">
  <div class="modal-box">
    <h3 class="font-bold text-lg">{title}</h3>
    <p class="py-4">{message}</p>
    <div class="modal-action">
      <form method="dialog">
        <button class="btn">{cancelLabel}</button>
        <button class={`btn btn-${confirmVariant} ml-2`} id={`${id}-confirm`} value="confirm">{confirmLabel}</button>
      </form>
    </div>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
